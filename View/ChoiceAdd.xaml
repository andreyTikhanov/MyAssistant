<Page x:Class="Assistant.View.ChoiceAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ChoiceAdd">

    <StackPanel Background="#69b898">
        <Label Margin="240 10" FontSize="15" Content="Выберите или создайте новую заметку: "></Label>
        <ListBox SelectionChanged="lbCategories_SelectionChanged"  Name="lbCategories" Height="350" Background="#a0d3bf"></ListBox>
        <Label Margin="320 10" FontSize="15" Content="Выберите действие: " ></Label>
        <Button Click="btn_AddNote_Click" Padding="5" Margin="300 10" FontSize="15" Background="#a0d3bf" Content="Создать новую заметку"></Button>
        <Button Click="btnContinue_Click" Padding="5" Margin="300 10" FontSize="15" Background="#a0d3bf" Content="Продолжить"></Button>
        <Button Click="btnBack_Click" Padding="5" Margin="300 10" FontSize="15" Background="#a0d3bf" Content="Назад"></Button>
       
        
     
    </StackPanel>
</Page>
