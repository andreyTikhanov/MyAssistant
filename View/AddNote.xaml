<Page x:Class="Assistant.View.AddNote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AddNote">

    <StackPanel Background="#69b898">
        <Label Name="lbCat" FontSize="15">Введите категорию заметки:</Label>
        <TextBox Name="tbCategory" FontSize="15" Background="#a0d3bf" Height="30"/>
        <Label Name="lbTitle" FontSize="15">Введите название заметки:</Label>
        <TextBox Name="tbTitle" FontSize="15" Background="#a0d3bf" Height="30"/>
        <Label FontSize="15">Введите описание заметки:</Label>
        <TextBox Name="tbDescription" FontSize="15" Background="#a0d3bf" Height="350" AcceptsReturn="True"/>
        <StackPanel Orientation="Horizontal">
            <Button Click="btnAddNote_Click" FontSize="15" Background="#a0d3bf" Content="Сохранить" Width="100" Margin="0,10,10,0"/>
            <Button Click="btnBack_Click" FontSize="15" Background="#a0d3bf" Content="Назад" Width="100" Margin="0,10,0,0"/>
        </StackPanel>
    </StackPanel>
</Page>
