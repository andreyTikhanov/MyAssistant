<Page x:Class="Assistant.view.AddNoteInExistsCategory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.view"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AddNoteInExistsCategory">
    <StackPanel Background="#FCDE9C">
        <Label Name="lbTitleCategory" Style="{StaticResource Labels}" Margin="10 0" Content=""/>
        <Label Style="{StaticResource Labels}" Margin="10 0 " Content="Введите название заметки:"></Label>
        <TextBox Style="{StaticResource TextBoxes}" Margin="10 0 10 10" x:Name="tbTitleNote" Height="30"></TextBox>
        <Label Style="{StaticResource Labels}" Margin="10 0 " Content="Введите описание заметки:"></Label>
        <TextBox Style="{StaticResource TextBoxes}"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 Margin="10 0 10 10" 
                 x:Name="tbDescriptionNote" Height="290"></TextBox>
        <Button IsDefault="True" Click="btnSave_Click" Margin="280 5" Style="{StaticResource myButton}" Padding="5" Content="Сохранить"></Button>
        <Button Click="btnBack_Click" Margin="280 5" Style="{StaticResource myButton}" Padding="5"  Content="Назад"></Button>
    </StackPanel>
</Page>
