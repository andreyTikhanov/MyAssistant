<Page x:Class="Assistant.view.AddNotePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.view"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AddNotePage">
   
    <StackPanel Background="#096f79">
        <Label Foreground="#4a4a08" FontSize="20" Margin="150 10 " Content="       Выберите категорию или создайте новую:"></Label>
        <ListBox DisplayMemberPath="Title" Margin="0 0 0 10" Background="#0c939b" x:Name="lbCategory" Height="320"></ListBox>
        <Button Click="btnContinue_Click" Margin="280 5" Background="#0c939b" Foreground="#4a4a08" Padding="5"  FontSize="20" Content="Продолжить"></Button>
        <Button Click="btnAddCategory_Click" Margin="280 5" Background="#0c939b" Foreground="#4a4a08" Padding="5"  FontSize="20" Content="Создать категорию"></Button>
        <Button Click="btnBack_Click" Margin="280 5" Background="#0c939b" Foreground="#4a4a08" Padding="5"  FontSize="20" Content="Назад"></Button>
    </StackPanel>
</Page>
