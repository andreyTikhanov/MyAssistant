<Page x:Class="Assistant.view.Pages.ViewDescriptionNote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.view.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ViewDescriptionNote">
    <StackPanel Background="#FCDE9C">
        <Label Name="lbTitleCategory"
               Style="{StaticResource Labels}"
               Margin="10 10"
               Content="Описание заметки: "/>
        <TextBox TextWrapping="Wrap" AcceptsReturn="True"
               Style="{StaticResource TextBoxes}"
               Margin="10 0 10 10"
               x:Name="tbDescriptionNote" Height="410"></TextBox>
        <Button Click="btnBack_Click" Margin="280 5"
                Style="{StaticResource myButton}"
                Padding="5"  
                Content="Назад"></Button>
    </StackPanel>
</Page>
