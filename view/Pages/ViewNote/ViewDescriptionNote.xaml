<Page x:Class="Assistant.view.Pages.ViewDescriptionNote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.view.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewDescriptionNote">
    <StackPanel Background="#096f79">
        <Label Name="lbTitleCategory"
               Foreground="#4a4a08"
               FontSize="20" Margin="10 10"
               Content="Описание заметки: "/>
        <TextBox TextWrapping="Wrap" AcceptsReturn="True"
               Foreground="#4a4a08" FontSize="20"
               Margin="0 0 0 10" Background="#0c939b"
               x:Name="tbDescriptionNote" Height="410"></TextBox>
        <Button Click="btnBack_Click" Margin="280 5"
                Background="#0c939b" Foreground="#4a4a08"
                Padding="5"  FontSize="20"
                Content="Назад"></Button>
    </StackPanel>
</Page>
