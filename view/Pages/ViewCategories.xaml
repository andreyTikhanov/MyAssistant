<Page x:Class="Assistant.view.Pages.ViewCategories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assistant.view.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewCategories">

    <StackPanel Background="#096f79">
        <Label Foreground="#4a4a08"
               FontSize="20" Margin="10 10 "
               Name="lbCategory"
               Content="Выберите категорию заметки:"/>
        <ListBox 
            DisplayMemberPath="Title"
            Foreground="#4a4a08" FontSize="20"
            Margin="0 0 0 10" Background="#0c939b"
            x:Name="lbTitleCategory" Height="360"/>
        <Button Click="btnContinue_Click"
                Margin="280 5" Background="#0c939b"
                Foreground="#4a4a08"
                Padding="5"  FontSize="20"
                Content="Продолжить"></Button>
        <Button Click="btnBack_Click"
                Margin="280 5" Background="#0c939b"
                Foreground="#4a4a08" Padding="5"
                FontSize="20" 
                Content="Назад"></Button>
    </StackPanel>
</Page>
