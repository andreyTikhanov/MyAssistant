<Window x:Class="Assistant.view.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assistant.view.Windows"
        mc:Ignorable="d"
        Title="" Height="240" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#096f79"  >
        <Label Name="lbDialog" Content="Вы действительно хотите удалить?"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="15" Foreground="#4a4a08" Margin="0,24,0,0"/>


        <Button Foreground="#4a4a08" Background="#0c939b" FontSize="18"
                Content="Да" Name="btnYes" Click="btnYes_Click" Margin="45,104,246,69" RenderTransformOrigin="0.482,0.152"/>

        <Button Foreground="#4a4a08" Background="#0c939b" FontSize="18"
                Content="Нет" Name="btnNo" Click="btnNo_Click" Margin="246,104,45,69" RenderTransformOrigin="0.491,0.003"/>





    </Grid>


</Window>
